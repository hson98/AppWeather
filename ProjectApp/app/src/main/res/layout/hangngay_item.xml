<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llHangNgay"
    android:layout_marginRight="30dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/tvThuHangNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T.2"
        android:textSize="20dp" />

    <ImageView
        android:layout_marginLeft="1dp"
        android:id="@+id/imgSangHangNgay"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
         />
    <TextView
        android:id="@+id/tvMoTa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mo ta"/>
    <TextView
        android:id="@+id/tvMaxMinNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max=, Min="/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/humidity" />

        <TextView
            android:id="@+id/tvPhanTramLuongMuaHn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="40%"
            android:textColor="#ffff" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">

        <TextView
            android:id="@+id/tvNhietDoHangNgaySang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:layout_marginTop="10dp"
            android:textColor="#ffff"
            android:textSize="40dp" />

    </LinearLayout>

</LinearLayout>
